@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="landing-page mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="image-section">
                <img src="~/Images/landing.jpg" alt="Landing page image" class="img-fluid" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="content-section">
                <h1 class="display-4">Welcome to Hospital Management</h1>
                <p class="lead">We provide a comprehensive and integrated hospital management system to streamline your hospital operations and enhance patient care.</p>
                <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h2>About us</h2>
            <p>We are a team of experienced healthcare professionals and software developers dedicated to providing innovative solutions for hospitals.</p>
            <a class="btn btn-outline-primary" href="#">Read more</a>
        </div>
        <div class="col-lg-4">
            <h2>Services</h2>
            <p>We offer a range of services including patient management, electronic medical records, billing and invoicing, and inventory management.</p>
            <a class="btn btn-outline-primary" href="#">View services</a>
        </div>
        <div class="col-lg-4">
            <h2>Contact us</h2>
            <p>Get in touch with us for more information about our products and services.</p>
            <a class="btn btn-outline-primary" href="#">Contact us</a>
        </div>
    </div>
</div>