@model HospitalManagement.Models.LabResults

<form method="post" asp-controller="PatientManagement" asp-action="LabResults" asp-route-patientId="@Model.PatientId">
    <div class="form-group">
        <label asp-for="TestPerformed">Test Performed:</label>
        <select asp-for="TestPerformed" id="TestPerformed" class="form-control" asp-items="@ViewBag.Laboratories"></select>
        <span asp-validation-for="TestPerformed"></span>
    </div>

    <div class="form-group">
        <label asp-for="TestPerformedBy">Test Performed By:</label>
        <select asp-for="TestPerformedBy" id="TestPerformedBy" class="form-control" asp-items="@ViewBag.Staff"></select>
        <span asp-validation-for="TestPerformedBy"></span>
    </div>

    <div class="form-group">
        <label asp-for="Report">Report:</label>
        <input asp-for="Report" id="Report" class="form-control" />
        <span asp-validation-for="Report"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-secondary">Cancel</button>
</form>
