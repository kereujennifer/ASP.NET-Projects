            </div>
            <div class="form-group">
                <label asp-for="LabaratoryCharge" class="control-label"></label>
                <input asp-for="LabaratoryCharge" class="form-control" />
                <span asp-validation-for="LabaratoryCharge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalBill" class="control-label"></label>
                <input asp-for="TotalBill" class="form-control" />
                <span asp-validation-for="TotalBill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="=btn btn-primary">Back to List</a>
</div>

