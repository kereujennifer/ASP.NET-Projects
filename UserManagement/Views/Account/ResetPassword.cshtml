@model ResetViewModel
@{
    ViewBag.Title = "Reset Password";
}
<h1>Reset Password</h1>

<div class="row">
    <div class="col-md-12">
        @if (Model?.EmailSent ==true)
        {
            <div class="alert alert-success" role="alert">
             <p> We have sent an email on your registered email id</p>           
            </div>
        }
        else
        {
            <p>Forgot your password? No worries we can reset it easily</p>

            <form asp-action="forgotPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        }

       
    </div>
</div>
<a asp-action="login" asp-controller="Account">Login</a>